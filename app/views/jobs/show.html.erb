<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8 job">
    <h2 class="job-position"><%= @job.position%></h2>
    <h4>Posting Date: <%= time_tag(@job.posting_date) %><h4>
    <p><a href="#" id="company-link"><%= @job.company.name %></a> <%= @job.location %></p>
    <div class="job-description">
      <h3 class="job-description-header">Job Description</h3>
      <p><%= @job.description %></p>
    </div>
  </div>
  <div class="col-md-2">
  </div>
</div>
